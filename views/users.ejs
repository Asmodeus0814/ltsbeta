<!-- views/trucking.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trucking Companies</title>
  <style>
    body {
    display: flex;
    background-image: url('/uploads/background.jpg');
    align-items: stretch;
    margin: 0;
    font-family: Arial, sans-serif; /* Added a generic font family */
  }
  
  .sidebar {
    background-color: #333;
    color: #fff;
    padding: 20px;
    width: 150px;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh; /* Set the height of the sidebar to cover the full height of the page */
    box-sizing: border-box; /* Include padding and border in the total width/height */
  }
  
  .content {
    flex: 1;
    padding: 20px;
    box-sizing: border-box; /* Include padding and border in the total width/height */
  }
  
  h1 {
    margin-bottom: 20px;
  }
  
  .nav-item {
    margin-bottom: 10px;
    width: 100%; /* Make the navigation items take full width */
    text-align: center; /* Center the text within each navigation item */
    padding: 10px;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  
  .nav-item:hover {
    background-color: #555; /* Change background color on hover */
  }
  
  .logout-btn {
    margin-top: auto; /* Push the logout button to the bottom of the container */
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    background-color: #c0392b; /* Red color for logout button */
    color: #fff;
  }
  
  .logout-btn:hover {
    background-color: #992d22; /* Darker red on hover */
  }
  
  p {
    margin-top: 20px;
  }
    .content {
      margin: 20px; /* Add equal margin around the content */
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: white;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center; /* Center-align text */
    }

    th {
      background-color: #f2f2f2;
    }

    .table-container {
      max-height: 400px; /* Set the maximum height for the table container */
      overflow-y: auto; /* Enable vertical scrolling */
    }

    .form-container {
      display: none;
      position: absolute;
      top: 20px; /* Adjusted top position */
      right: 10px;
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .form-container.active {
      display: block;
    }

    .form-container form {
      text-align: left;
    }

    .form-container label {
      display: block;
      margin-top: 10px;
    }

    .form-container input {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }

    .form-container button {
      background-color: #4CAF50;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    
    .add-button {
      padding: 10px;
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .add-trucking-btn {
      position: absolute;
      top: 80px;
      right: 180px;
      background-color: #4CAF50;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    .add-trucking-btn-modify {
      position: absolute;
      top: 80px;
      right: 100px;
      background-color: #e80042;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    .delete-button {
      background-color: #e80042;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    .edit-button {
      background-color: #19faf6;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
  </style>
  <link rel="icon" href="uploads/favicon.ico" type="image/x-icon">
</head>
<div class="sidebar">
  <div class="nav-item" onclick="toggleDashboard()">Dashboard</div>
  <div class="nav-item" onclick="toggleTrucking()">Trucking Companies</div>
  <div class="nav-item" onclick="toggleDrivers()">Drivers</div>
  <div class="nav-item" onclick="toggleTruckUnit()">Truck Units</div>
  <div class="nav-item" onclick="toggleDeliveries()">Deliveries</div>
  <div class="nav-item" onclick="toggleMaintenance()"> Maintenance</div>
  <div class="nav-item" onclick= "toggleBilling()">Billing</div>
  <div class="nav-item" onclick="toggleUsers()">User Settings</div>
  <button class="logout-btn" onclick="toggleLogout()">Logout</button>
  
</div>
<body>
  <div class="content">
    <div class="user-settings-form">
      <h1 style="color: white;">User Settings</h1>
      <form id="userSettingsForm" onsubmit= "return editUser()">
        <label style="color: white;" for="username">Change Username:</label>
        <input type="text" id="username" name="username" required>
  
        <label style="color: white;" for="password">Change Password:</label>
        <input type="password" id="password" name="password" required>
  
        <button type="submit">Save Changes</button>
      </form>
    </div>
  </div>

  <!-- Add the script section for any specific functionality related to trucking -->
  <script src="/functions.js"></script>
</body>
</html>
