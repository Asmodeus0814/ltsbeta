<!-- views/trucking.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Maintenance</title>
  <style>
    body {
    display: flex;
    align-items: stretch;
    margin: 0;
    font-family: Arial, sans-serif; /* Added a generic font family */
    background-image: url('/uploads/background.jpg');
  }
  
  .sidebar {
    background-color: #333;
    color: #fff;
    padding: 20px;
    width: 150px;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh; /* Set the height of the sidebar to cover the full height of the page */
    box-sizing: border-box; /* Include padding and border in the total width/height */
  }
  
  .content {
    flex: 1;
    padding: 20px;
    box-sizing: border-box; /* Include padding and border in the total width/height */
  }

  h1 {
    margin-bottom: 20px;
  }
  
  .nav-item {
    margin-bottom: 10px;
    width: 100%; /* Make the navigation items take full width */
    text-align: center; /* Center the text within each navigation item */
    padding: 10px;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  
  .nav-item:hover {
    background-color: #555; /* Change background color on hover */
  }
  
  .logout-btn {
    margin-top: auto; /* Push the logout button to the bottom of the container */
    width: 100%;
    padding: 10px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    background-color: #c0392b; /* Red color for logout button */
    color: #fff;
  }
  
  .logout-btn:hover {
    background-color: #992d22; /* Darker red on hover */
  }
  
  p {
    margin-top: 20px;
  }
    .content {
      margin: 20px; /* Add equal margin around the content */
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      background-color: white;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center; /* Center-align text */
    }

    th {
      background-color: #f2f2f2;
    }

    .table-container {
      max-height: 700px; /* Set the maximum height for the table container */
      overflow-y: auto; /* Enable vertical scrolling */
    }

    .form-container {
      display: none;
      position: absolute;
      top: 20px; /* Adjusted top position */
      right: 10px;
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .form-container.active {
      display: block;
    }

    .form-container form {
      text-align: left;
    }

    .form-container label {
      display: block;
      margin-top: 10px;
    }

    .form-container input {
      width: 100%;
      padding: 8px;
      margin-top: 5px;
      margin-bottom: 10px;
      box-sizing: border-box;
    }

    .form-container button {
      background-color: #4CAF50;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    
    .add-button {
      padding: 10px;
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }
    .add-trucking-btn {
      position: absolute;
      top: 80px;
      right: 180px;
      background-color: #4CAF50;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    .add-trucking-btn-modify {
      position: absolute;
      top: 80px;
      right: 100px;
      background-color: #e80042;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    .delete-button {
      background-color: #e80042;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    .edit-button {
      background-color: #19faf6;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    .form-container select {
     width: 100%;
     padding: 8px;
     margin-top: 5px;
     margin-bottom: 10px;
     box-sizing: border-box;
    }
    .display-button {
      background-color: #df089f;
      color: #fff;
      border: none;
      padding: 10px;
      cursor: pointer;
      border-radius: 4px;
    }
    #proofContent button {
    /* Button styles */
    padding: 10px 20px;
    background-color: #3498db; /* Button background color */
    color: #ffffff; /* Button text color */
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
  }

  #proofContent {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
  max-width: 50%;
  max-height: 50%;
  margin: 10% auto 0; /* Adjust the top margin as needed */
}

#proofImage {
  max-width: 70%; /* Set the maximum width of the image */
  max-height: 70%; /* Set the maximum height of the image */
  width: auto; /* Maintain aspect ratio */
  height: auto; /* Maintain aspect ratio */
}

/* Style for the overlay */
.overlay {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1;
}
  /* Style for the close button */
  .close {
    position: absolute;
    top: 10px;
    right: 10px;
    font-size: 20px;
    cursor: pointer;
  }

  .edit-form-container select {
    position: absolute;
    left: -9999px;
    width: 100%;
    padding: 8px;
    margin-top: 5px;
    margin-bottom: 10px;
    box-sizing: border-box;
    }

    #drop_down_edit_trucking_id_label{
      display: none;
    }
    #drop_down_edit_driver_id_label{
      display: none;
    }
    #drop_down_edit_truck_id_label{
      display: none;
    }

  </style>
  <link rel="icon" href="uploads/favicon.ico" type="image/x-icon">
</head>
<div class="sidebar">
  <div class="nav-item" onclick="toggleDashboard()">Dashboard</div>
  <div class="nav-item" onclick="toggleTrucking()">Trucking Companies</div>
  <div class="nav-item" onclick="toggleDrivers()">Drivers</div>
  <div class="nav-item" onclick="toggleTruckUnit()">Truck Units</div>
  <div class="nav-item" onclick="toggleDeliveries()">Deliveries</div>
  <div class="nav-item" onclick="toggleMaintenance()"> Maintenance</div>
  <div class="nav-item" onclick= "toggleBilling()">Billing</div>
  <div class="nav-item" onclick="toggleUsers()">User Settings</div>
  <button class="logout-btn" onclick="toggleLogout()">Logout</button>
  
</div>
<body>
  <div class="content">
    <h1 style="color: white;">Maintenance Records</h1>
    <div class="button-container">
      <button class="add-trucking-btn" onclick="toggleFormContainerMaintenance()">Add a Maintenance</button>
      <button class="add-trucking-btn-modify" onclick="toggleModify()">Modify</button>
    </div>
    <!-- Scrollable table container -->
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Trucking Company</th>
            <th>Truck Unit</th>
            <th>Plate No</th>
            <th>Driver</th>
            <th>Receipt Proof</th>
            <th id="actionColumnHeader" style="display: none;">Action</th>
          </tr>
        </thead>
        <tbody id="maintenanceTableBody"></tbody>>
          <% maintenances.forEach(maintenance => { %>
            <tr>
              <td><%= maintenance.maintenance_id %></td>
              <td id="truckingName_<%= maintenance.trucking_id %>"><%= maintenance.trucking_id %></td>
              <td id="truckingName_<%= maintenance.truck_id %>"><%= maintenance.truck_id %></td>
              <td id="truckPlateNo_<%= maintenance.truck_id %>"><%= maintenance.truck_id %></td>
              <td id="truckingName_<%= maintenance.driver_id %>"><%= maintenance.driver_id %></td>
              <td><button class="display-button" onclick="displayProofMaintenance('<%= maintenance.receipt_proof %>')">View</button></td>
              <td class="edit-button-column" style="display: none;">
                <button class="edit-button" onclick="editMaintenance('<%= maintenance.maintenance_id %>')">Edit</button>
                <button class="delete-button" onclick="deleteMaintenance('<%= maintenance.maintenance_id %>')">Delete</button>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <div id="proofOverlay" class="overlay" style="display: none;">
    <div id="proofContent">
      <img id="proofImage" src="" alt="Receipt Proof">
      <button type="button" onclick="closeProofOverlayMaintenance()">Close</button>
    </div>
  </div>

  <!-- Form container that appears when the button is clicked -->
  <div class="form-container" id="formContainer">
    <form id="addForm" onsubmit="return addMaintenance()">
      <h1>Add a Maintenance Record</h1>
      <label for="trucking_id">Trucking Company:</label>
      <select id="trucking_id" name="trucking_id" required class="dropdown-style"></select>

      <label for="driver_id">Driver:</label>
      <select id="driver_id" name="driver_id" required class="dropdown-style"></select>
  
      <label for="truck_id">Truck Unit:</label>
      <select id="truck_id" name="truck_id" required class="dropdown-style"></select>
                  <!-- File uploader for Receive Proof -->
      <label for="com_receive_proof">Receipt:</label>
      <input type="file" id="com_receive_proof" name="com_receive_proof" accept=".jpg, .jpeg, .png" required>

      <button type="submit">Submit</button>
      <button type="button" onclick="toggleFormContainerMaintenance()">Close</button>
    </form>
  </div>

  <div class="form-container" id="editFormOverlay" style="display: none;">
    <form id="editForm" onsubmit="return editTruckingSubmitMaintenance()">

      <label for="maintenance_id">Maintenance ID:</label>
      <input type="text" id="maintenance_id" name="maintenance_id" readonly>

      <label id="truckingIdLabel" for="edit_trucking_id">Trucking Company:</label>
        <input type="text" id="edit_trucking_id" name="edit_trucking_id" readonly>
  
      <label id= "drop_down_edit_trucking_id_label" for="drop_down_edit_trucking_id">Trucking Company:</label>
      <select id="drop_down_edit_trucking_id" name="drop_down_edit_trucking_id" required class="dropdown-style"></select>

      <label id="driverIdLabel" for="edit_driver_id">Driver:</label>
        <input type="text" id="edit_driver_id" name="edit_driver_id" readonly>

      <label id="drop_down_edit_driver_id_label" for="drop_down_edit_driver_id">Driver:</label>
      <select id="drop_down_edit_driver_id" name="drop_down_edit_driver_id" required class="dropdown-style"></select>

      <label id="truckUnitIdLabel" for="edit_truck_id">Truck Unit:</label>
       <input type="text" id="edit_truck_id" name="edit_truck_id" readonly>
  
      <label id="drop_down_edit_truck_id_label" for="drop_down_edit_truck_id">Truck Unit:</label>
      <select id="drop_down_edit_truck_id" name="drop_down_edit_truck_id" required class="dropdown-style"></select>
                  <!-- File uploader for Receive Proof -->
      <label for="receipt_proof">Receipt:</label>
      <input type="file" id="receipt_proof" name="receipt_proof" accept=".jpg, .jpeg, .png" required>

      <button type="button" onclick="populateEditTruckingDropdownDeliveryMain()">Change Trucking Company</button>
      <button type="button" onclick="populateEditDriverDropdownDeliveryMain()">Change Driver</button>
      <button type="button" onclick="populateEditTruckUnitDropdownDeliveryMain()">Change Truck Unit</button>

      <button type="submit">Update</button>
      <button type="button" onclick="toggleChangeEditFormOverlayMain()">Close</button>
    </form>
  </div>
  

  <!-- Add the script section for any specific functionality related to trucking -->
  <script src="/functions.js"></script>
  <script>
      compareTruckingIdsAndNamesDeliveryMain();
      compareDriverIdsAndNamesDeliveryMain();
      compareTruckUnitIdsAndNamesDeliveryMain();
      compareTruckUnitIdsAndPlateNoDeliveryMain();
  </script>
</body>
</html>
